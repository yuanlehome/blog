---
import { buildPostUrl } from '../lib/slug';
import type { CollectionEntry } from 'astro:content';

interface Props {
  prev?: CollectionEntry<'blog'>;
  next?: CollectionEntry<'blog'>;
}

const { prev, next } = Astro.props;
---

<div class="grid md:grid-cols-2 gap-4 mt-10">
  {
    prev ? (
      <a
        href={buildPostUrl(prev.slug)}
        class="block p-4 rounded-lg border border-zinc-200 dark:border-zinc-800 hover:border-sky-500"
      >
        <div class="text-xs uppercase text-zinc-500">Previous</div>
        <div class="font-semibold">{prev.data.title}</div>
      </a>
    ) : (
      <div />
    )
  }

  {
    next ? (
      <a
        href={buildPostUrl(next.slug)}
        class="block p-4 rounded-lg border border-zinc-200 dark:border-zinc-800 hover:border-sky-500 text-right"
      >
        <div class="text-xs uppercase text-zinc-500">Next</div>
        <div class="font-semibold">{next.data.title}</div>
      </a>
    ) : (
      <div />
    )
  }
</div>
