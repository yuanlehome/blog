---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const headings = Astro.props.headings
  .filter((heading) => heading.depth <= 3)
  .map((heading) => ({
    ...heading,
    indentClass: heading.depth === 3 ? 'pl-3 border-l border-gray-200 dark:border-gray-800' : '',
  }));
---

<aside class="hidden xl:block w-72 shrink-0">
  <div class="sticky top-28 space-y-3 rounded-2xl border border-gray-200/70 bg-white/60 p-5 shadow-sm ring-1 ring-black/5 backdrop-blur dark:border-gray-800/60 dark:bg-gray-900/70">
    <div class="flex items-center justify-between text-sm">
      <div>
        <p class="font-semibold text-gray-900 dark:text-gray-100">目录 / Map</p>
        <p class="text-xs text-gray-500 dark:text-gray-400">Navigate without losing context</p>
      </div>
      <span class="text-[10px] uppercase tracking-[0.2em] text-gray-400 dark:text-gray-500">toc</span>
    </div>
    {headings.length === 0 ? (
      <p class="text-sm text-gray-500 dark:text-gray-400">本文暂无目录。</p>
    ) : (
      <nav aria-label="文章目录">
        <ol class="space-y-2 text-sm leading-relaxed">
          {headings.map((heading) => (
            <li>
              <a
                href={`#${heading.slug}`}
                class={`flex items-start gap-2 rounded-lg px-2 py-1 text-gray-700 underline-offset-2 transition hover:bg-blue-50 hover:text-blue-700 dark:text-gray-200 dark:hover:bg-blue-900/40 dark:hover:text-blue-200 ${heading.indentClass}`}
              >
                <span class="mt-0.5 text-xs text-gray-400 dark:text-gray-500">#</span>
                <span class="leading-snug">{heading.text}</span>
              </a>
            </li>
          ))}
        </ol>
      </nav>
    )}
  </div>
</aside>
