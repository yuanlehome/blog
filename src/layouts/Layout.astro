---
import 'katex/dist/katex.min.css';
import '../styles/global.css';
import ThemeScript from '../components/ThemeScript.astro';
import { normalizeBase } from '../lib/slug';
import { getSiteConfig } from '../config/loaders';
import { getThemeConfig, getTypographyConfig, getComponentsConfig } from '../config/loaders';
import { generateThemeCSS } from '../lib/theme/cssGenerator';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const BASE = normalizeBase(import.meta.env.BASE_URL);
const siteConfig = getSiteConfig();
const themeConfig = getThemeConfig();
const typographyConfig = getTypographyConfig();
const componentsConfig = getComponentsConfig();

// Generate theme CSS variables
const themeCSS = generateThemeCSS(themeConfig, typographyConfig, componentsConfig);

const url = new URL(
  Astro.url.pathname,
  new URL(BASE, Astro.site ?? 'http://localhost/'),
).toString();
const {
  title,
  description = siteConfig.description,
  image = `${BASE}${siteConfig.socialImage}`,
} = Astro.props;
---

<!doctype html>
<html lang={siteConfig.defaultLanguage}>
  <head>
    <ThemeScript />
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href={`${BASE}favicon.ico`} />
    <link rel="icon" type="image/png" sizes="32x32" href={`${BASE}favicon-32x32.png`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${BASE}favicon-16x16.png`} />
    <link rel="apple-touch-icon" sizes="180x180" href={`${BASE}apple-touch-icon.png`} />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={url} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <title>{title}</title>

    <style set:html={themeCSS}></style>

    <style>
      :root {
        scroll-behavior: smooth;
      }
      .heading-anchor {
        margin-left: 0.35rem;
        opacity: 0;
        text-decoration: none;
        transition: opacity 0.2s ease;
      }
      h1:hover .heading-anchor,
      h2:hover .heading-anchor,
      h3:hover .heading-anchor,
      h4:hover .heading-anchor,
      h5:hover .heading-anchor,
      h6:hover .heading-anchor {
        opacity: 0.65;
      }
    </style>
  </head>
  <body
    class="bg-[#1a1a1f] dark:bg-[#0a0a0f] text-zinc-200 dark:text-zinc-100 transition-colors duration-300 min-h-screen flex flex-col"
  >
    <slot />
    <script src="../lib/ui/header-height.ts"></script>
    <script src="../lib/ui/code-blocks.ts"></script>
  </body>
</html>
