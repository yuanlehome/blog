# Notion Settings
NOTION_TOKEN=secret_your_token_here
NOTION_DATABASE_ID=your_database_id_here

# Markdown Translation Settings (Optional)
MARKDOWN_TRANSLATE_ENABLED=1
MARKDOWN_TRANSLATE_PROVIDER=mock

# DeepSeek Translation (requires API key)
MARKDOWN_TRANSLATE_PROVIDER=deepseek
DEEPSEEK_API_KEY=sk-your-api-key-here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_REQUEST_TIMEOUT_MS=60000
DEEPSEEK_MAX_BATCH_CHARS=6000
DEEPSEEK_MAX_CONCURRENCY=2
DEEPSEEK_CACHE_ENABLED=1
DEEPSEEK_CACHE_DIR=.cache/markdown-translate

# Busuanzi Analytics Settings (Optional)
# Enable Busuanzi page view statistics (true/false)
PUBLIC_BUSUANZI_ENABLED=true
# Custom Busuanzi script URL (optional, uses default if not set)
# PUBLIC_BUSUANZI_SCRIPT_URL=https://busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js
# Enable debug logging (optional, default: false)
# PUBLIC_BUSUANZI_DEBUG=false
